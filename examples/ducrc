
[global]
  # you'll want to ensure duc always looks for duc.db someplace globally accessible
  # if you plan to regularly run duc index from cron.  no faffing about with ENV!
  database /var/cache/duc.db


[ls]

  recursive
  classify
  color

[index]

  exclude Cache
  exclude .ccache

[gui]

  fuzz 0.7
  palette rainbow
  levels 7


